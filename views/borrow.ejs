<% include component/header.ejs %>
</head>


<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <% include component/sidebar.ejs %>
        <% include component/top_nav.ejs %>

        <div class="right_col" role="main">
            <% include component/top_tiles.ejs %>
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="x_panel tile">
                        <div class="x_title">
                            <h2>借阅
                                <small>二者只需填写一个</small>
                            </h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="dashboard-widget-content">
                                <form action="" class="form-horizontal">
                                    <div class="form-group">
                                        <label for="book_id" class="col-sm-2 control-label">书号: </label>
                                        <div class="col-sm-10">
                                            <input type="text" id="book_id" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="book_name" class="col-sm-2 control-label">书名: </label>
                                        <div class="col-sm-10">
                                            <input type="text" id="book_name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="r_id" class="col-sm-2 control-label">借阅证号: </label>
                                        <div class="col-sm-10">
                                            <input type="text" id="r_id" class="form-control">
                                        </div>
                                    </div>
                                     <div class="form-group">
                                        <label for="borrow_date" class="col-sm-2 control-label">借阅日期: </label>
                                        <div class="col-sm-10">
                                            <input type="text" id="borrow_date" class="form-control">
                                        </div>
                                    </div>
                                     <div class="form-group">
                                        <label for="return_date" class="col-sm-2 control-label">归还日期: </label>
                                        <div class="col-sm-10">
                                            <input type="text" id="return_date" class="form-control">
                                        </div>
                                    </div>

                                </form>
                                <button class="btn-primary" id="borrow">借阅</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="x_panel tile">
                        <div class="x_title">
                            <h2>借阅历史查询</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="dashboard-widget-content">
                                <label for="query_id">查询借书证号：</label>
                                <div class="input-group">
                                    <input type="text" id="query_id" class="form-control">
                                    <span class="input-group-btn">
                                       <button class="btn btn-primary" id="history">查询</button>
                                    </span>
                                </div>
                                <table class="table" style="display: none">
                                    <tr>
                                        <th>序号</th>
                                        <th>书号</th>
                                        <th>类别</th>
                                        <th>书名</th>
                                        <th>出版社</th>
                                        <th>年份</th>
                                        <th>作者</th>
                                        <th>价格</th>
                                        <th>数量</th>
                                    </tr>
                                    <tr>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="user_query_result" tabindex="-1" role="dialog" aria-labelledby="user_query_result" style="display: none">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h4 class="modal-title" id="user_query_result_label">查询结果</h4>
                            </div>
                            <div class="modal-body">
                                <table class="table table-striped" id="query_result">
                                    <tr>
                                        <th>序号</th>
                                        <th>流水号</th>
                                        <th>书名</th>
                                        <th>借阅日期</th>
                                        <th>应还日期</th>
                                        <th>经手人</th>
                                    </tr>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<script src="js/bootstrap.min.js"></script>
<script src="js/pace/pace.min.js"></script>
<script src="js/custom.js"></script>
<script src="js/jquery-ui.js"></script>
<script src="js/borrow.js"></script>
</body>